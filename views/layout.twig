<!DOCTYPE html>
<html>
    <head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/css/style.css">
    <link href='http://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    <title>Blog | {% block title%}{% endblock %}</title>
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li>
                        <a href="{{ app.url_generator.generate('home') }}">Home</a>
                    </li>
                    {% if admin == 1 %}
                    <li>
                        <a href="{{ app.url_generator.generate('getAdminArticle') }}">Admin article</a>
                    </li>
                    <li>
                        <a href="{{ app.url_generator.generate('getAdminTags') }}">Admin tag</a>
                    </li>
                    {% endif %}
                </ul>
            </nav>
            <div id="login">
            {% if user %}
                    <p>Bienvenue, {{ user.name }}</p>
                    <a href="{{ app.url_generator.generate('logout') }}">Logout</a>
            {% else  %}
                <a href="{{ app.url_generator.generate('login') }}">Login</a>
                <a href="{{ app.url_generator.generate('register') }}">Register</a>
            {% endif %}
            </div>
        </header>
        <div id="content">{% block content %}{% endblock %}</div>
        <div id="footer">
        </div>
    </body>
</html>
